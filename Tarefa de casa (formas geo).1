// javascript //

var canvas = document.getElementById("myCanvas");
var ctx = canvas.getContext ("2d");

// Quadrado casa //

ctx.fillStyle = "#FF0000";
ctx.fillRect (50, 200, 100, 100); 

// sorriso casa //

ctx.beginPath ();
ctx.arc (100, 260, 25, 0, 1 * Math.PI);
ctx.fillStyle = "#FFFFFF";
ctx.fill ();
ctx.closePath (); 

// janelinhas casa //

ctx.beginPath ();
ctx.arc (120, 235, 15, 0, 2 * Math.PI);
ctx.fillStyle = "#000000";
ctx.fill ();
ctx.closePath (); 

ctx.beginPath ();
ctx.arc (80, 235, 15, 0, 2 * Math.PI);
ctx.fillStyle = "#000000";
ctx.fill ();
ctx.closePath (); 

// Teto casa //

ctx.beginPath ();
ctx.moveTo (50, 200);
ctx.lineTo (100, 100);
ctx.lineTo (150, 200);
ctx.fillStyle = "#0000FF"; 
ctx.fill ();
ctx.closePath ();

// retangulo bandeira //

ctx.fillStyle = "#009440";
ctx.fillRect (250, 200, 200, 150); 

// Losango amarelo //
ctx.fillStyle = 'yellow';
ctx.beginPath();
ctx.moveTo(250, 60);
ctx.lineTo(370, 150);
ctx.lineTo(250, 240);
ctx.lineTo(130, 150);
ctx.closePath();
ctx.fill();

// Círculo azul //
ctx.fillStyle = 'blue';
ctx.beginPath();
ctx.arc(350, 270, 45, 0, 2 * Math.PI);
ctx.fill();






